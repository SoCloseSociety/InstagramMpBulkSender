#
# Copy this file to .env and fill in your credentials:
#   cp .env.example .env

# ─── Instagram Credentials ───────────────────────
INSTAGRAM_EMAIL=your_email@example.com
INSTAGRAM_PASSWORD=your_password

# ─── Browser Configuration ───────────────────────
BROWSER=firefox
# Options: firefox, chrome
HEADLESS=false
# Set to true to run without visible browser window

# ─── File Paths ──────────────────────────────────
MESSAGE_FILE=message.txt
PROFILES_FILE=profile_links.csv
SENT_FILE=already_send_message.csv

# ─── Limits & Timing ────────────────────────────
MAX_MESSAGES=10000
MIN_DELAY=8
MAX_DELAY=15
# Delays are in seconds — mimics human behavior
